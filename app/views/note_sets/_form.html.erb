<div class="NoteSmack_form">
<%= form_for @note_set  do |f| %>
    <% if @note_set.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@note_set.errors.count, "error") %>
            prohibited this note_set from being saved:</h2>

          <ul>
            <% @note_set.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <!-- START_HIGHLIGHT -->
      <%= f.text_area :description, rows: 10 %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :school_id %><br>
      <%= f.text_field :school_id %>
    </div>
    <div class="field">
      <%= f.label :class %><br>
      <%= f.text_field :class %>
    </div>
    <div class="field">
      <%= f.label :section %><br>
      <%= f.text_area :section%>
    </div>
    <div class="field">
      <%= f.label :class_date %><br>
      <%= f.text_field :class_date %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

</div>
