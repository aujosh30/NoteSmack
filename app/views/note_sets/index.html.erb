<h1>Listing note_sets</h1>

<table>
  <% @note_sets.each do |note_set| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

        <td>
          <%= image_tag(note_set.title, class: 'Title') %>
        </td>

        <td class="list_description">
          <dl>
            <dt><%= note_set.title %></dt>
            <dd><%= truncate(strip_tags(note_set.description),
                             length: 80) %></dd>
          </dl>
        </td>

        <td class="list_actions">
          <%= link_to 'Show', note_set %><br/>
          <%= link_to 'Edit', edit_note_sets_path(note_set) %><br/>
          <%= link_to 'Destroy', note_set, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
</table>

<br />

